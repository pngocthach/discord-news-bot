{
  "name": "discord-news-bot",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate --schema=./src/db/schema.ts --dialect=postgresql --out=./src/db/migrations",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@neondatabase/serverless": "^1.0.1",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "envalid": "^8.1.0",
    "hono": "^4.9.5"
  },
  "imports": {
    "#/*": "./dist/src/*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "ultracite": "5.3.3"
  }
}
