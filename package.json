{
  "name": "discord-news-bot",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts | pino-pretty",
    "build": "baml generate --from src/baml_src/  && tsup src/index.ts --format esm --clean",
    "start": "npx puppeteer browsers install chrome && node dist/index.js | pino-pretty",
    "baml:generate": "baml generate --from src/baml_src/",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@boundaryml/baml": "^0.208.5",
    "@hono/node-server": "^1.19.0",
    "@logtail/pino": "^0.5.6",
    "@neondatabase/serverless": "^1.0.1",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "envalid": "^8.1.0",
    "hono": "^4.9.5",
    "node-cron": "^4.2.1",
    "pino": "^9.9.4",
    "puppeteer": "^24.19.0",
    "rss-parser": "^3.13.0"
  },
  "imports": {
    "#/*": "./dist/src/*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "^20.11.17",
    "@types/node-cron": "^3.0.11",
    "drizzle-kit": "^0.31.4",
    "msw": "^2.11.1",
    "pino-pretty": "^13.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "ultracite": "5.3.3",
    "vitest": "^3.2.4"
  }
}
